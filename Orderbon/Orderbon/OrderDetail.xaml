<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orderbon.OrderDetail"
             Title="Order">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Algemeen">
                    <EntryCell Placeholder="Titel" Text="{Binding _Order.Title}" />
                    <EntryCell Label="Klant" Text="{Binding _Contact.Name}" XAlign="Center" />
                    <TextCell Text="Aangemaakt op" Detail="{Binding _Order.Date}" />
                    <TextCell Text="Laatst gewijzigd op" Detail="{Binding _Order.Date}" />
                </TableSection>
                <TableSection Title="Artikelen">
                    <ViewCell>
                        <ListView></ListView>
                    </ViewCell>    
                </TableSection>
                <TableSection Title="Commentaar">
                    <ViewCell>
                        <Editor></Editor>
                    </ViewCell>
                </TableSection>
            </TableRoot>                
        </TableView>
    </ContentPage.Content>
</ContentPage>