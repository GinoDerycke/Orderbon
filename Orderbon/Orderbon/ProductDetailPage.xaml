<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orderbon.ProductDetailPage"
             Title="Artikel">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" BackgroundColor="LightBlue">
                <Button Text="Terug" HorizontalOptions="Start" Clicked="Cancel_Clicked" BackgroundColor="LightBlue"/>
                <Button Text="Bewaren" HorizontalOptions="EndAndExpand" Clicked="Save_Clicked" BackgroundColor="LightBlue"/>
            </StackLayout>
            <TableView Intent="Form" HasUnevenRows="True">
                <TableRoot>
                    <TableSection>
                        <ViewCell>
                            <Grid Padding="20,10,20,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Grid.Row="0" Source="baseline_info_black_24.png" VerticalOptions="Center" />
                                <Entry Grid.Column="1" Grid.Row="0" Placeholder="Naam" Text="{Binding Name}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="1" Placeholder="Code" Text="{Binding Code}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="2" Placeholder="Groep" Text="{Binding Group}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="3" Placeholder="Leverancier" Text="{Binding Supplier}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="4" Placeholder="Eenheid" Text="{Binding Unit}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="5" Placeholder="Prijs excl. BTW" Text="{Binding SellingPriceExclVAT}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="6" Placeholder="Voorraad" Text="{Binding Stock}" TextChanged="Entry_TextChanged" />
                                <Entry Grid.Column="1" Grid.Row="7" Placeholder="Gereserveerd" Text="{Binding Reserved}" TextChanged="Entry_TextChanged" />
                            </Grid>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>