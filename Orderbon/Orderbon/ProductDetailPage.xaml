<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orderbon.ProductDetailPage"
             Title="Artikel">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" BackgroundColor="White">
                <Button Text="Terug" Image="baseline_arrow_back_black_24.png" HorizontalOptions="Start" Clicked="Cancel_Clicked" BackgroundColor="White"/>
                <Button Text="Bewaren" Image="baseline_done_black_24.png"  HorizontalOptions="EndAndExpand" Clicked="Save_Clicked" BackgroundColor="White"/>
            </StackLayout>
            <TableView Intent="Form" HasUnevenRows="True">
                <TableRoot>
                    <TableSection>
                        <ViewCell>
                            <!--<StackLayout Orientation="Horizontal" HeightRequest="150" Padding="20,10,20,10">
                                <Entry Placeholder="Naam" FontSize="Large" FontAttributes="Bold" Text="{Binding Name}" TextChanged="Entry_TextChanged" HorizontalOptions="FillAndExpand" VerticalOptions="End" Keyboard="Text"/>
                            </StackLayout>-->
                          <StackLayout Padding="20,10,20,10">
                            <Label Text="Naam" Style="{StaticResource label}" />
                            <Entry Placeholder="Naam" FontSize="Large" Text="{Binding Name}" TextChanged="Entry_TextChanged" Keyboard="Text"/>  
                          </StackLayout>  
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                           <!--<Grid Padding="20,10,20,10">
                              <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="Auto" />
                                  <ColumnDefinition Width="*" />
                              </Grid.ColumnDefinitions>
                              <Image Grid.Column="0" Grid.Row="0" Source="baseline_info_black_24.png" VerticalOptions="Center" />
                              <Entry Grid.Column="1" Grid.Row="0" Placeholder="Code" Text="{Binding Code}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                              <Entry Grid.Column="1" Grid.Row="1" Placeholder="Groep" Text="{Binding Group}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                              <Entry Grid.Column="1" Grid.Row="2" Placeholder="Leverancier" Text="{Binding Supplier}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                              <Entry Grid.Column="1" Grid.Row="3" Placeholder="Eenheid" Text="{Binding Unit}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                              <Entry x:Name="entryPrice" Grid.Column="1" Grid.Row="4" Placeholder="Prijs excl. BTW" Text="{Binding SellingPriceExclVAT, StringFormat='{0:0.00 €}'}" TextChanged="Entry_TextChanged" Keyboard="Numeric" />
                           </Grid>-->
                          <StackLayout Padding="20,10,20,10" Margin="0,5,0,5">
                            <Label Text="Code" Style="{StaticResource label}" />
                            <Entry Placeholder="Code" Text="{Binding Code}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                            <Label Text="Groep" Style="{StaticResource label}"/>
                            <Entry Placeholder="Groep" Text="{Binding Group}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                            <Label Text="Leverancier" Style="{StaticResource label}"/>
                            <Entry Placeholder="Leverancier" Text="{Binding Supplier}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                            <Label Text="Eenheid" Style="{StaticResource label}"/>
                            <Entry Placeholder="Eenheid" Text="{Binding Unit}" TextChanged="Entry_TextChanged" Keyboard="Text"/>
                            <Label Text="Prijs excl. BTW" Style="{StaticResource label}"/>
                            <Entry Placeholder="Prijs excl. BTW" Text="{Binding SellingPriceExclVAT}" TextChanged="Entry_TextChanged" Keyboard="Numeric" />
                          </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <!--<Grid Padding="20,10,20,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Grid.Row="0" Source="baseline_storage_black_24.png" VerticalOptions="Center" />
                                <Entry Grid.Column="1" Grid.Row="0" Placeholder="Voorraad" Text="{Binding Stock}" TextChanged="Entry_TextChanged" Keyboard="Numeric"/>
                                <Entry Grid.Column="1" Grid.Row="1" Placeholder="Gereserveerd" Text="{Binding Reserved}" TextChanged="Entry_TextChanged" Keyboard="Numeric"/>
                            </Grid>-->
                          <StackLayout x:Name="lastStackLayout" Padding="20,10,20,10" Margin="0,5,0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*" />
                                    <ColumnDefinition Width="50*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0">
                                    <Label Text="Voorraad" Style="{StaticResource label}" />
                                    <Entry Placeholder="Voorraad" Text="{Binding Stock}" TextChanged="Entry_TextChanged" Keyboard="Numeric"/>
                                </StackLayout>
                                <StackLayout Grid.Column="1">
                                    <Label Text="Gereserveerd" Style="{StaticResource label}" />
                                    <Entry Placeholder="Gereserveerd" Text="{Binding Reserved}" TextChanged="Entry_TextChanged" Keyboard="Numeric"/>
                                </StackLayout>
                                </Grid>
                          </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>